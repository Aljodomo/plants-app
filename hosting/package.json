{
  "name": "plants-app",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "npm run dev",
    "dev": "vite",
    "build": "npm run type-check && npm run build-only",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "style": "prettier --write src/",
    "format": "npm run lint && npm run style",
    "deploy-preview": "firebase hosting:channel:deploy new-feature --expires 1d",
    "update-firebase": "npx npm-check-updates firebase -u && npm i",
    "gen-types-perenual": "npx @openapitools/openapi-generator-cli generate -g typescript-fetch -i api-docs/perenual-openapi-spec.yml --output generated/perenual",
    "gen-types-plantnet": "npx @openapitools/openapi-generator-cli generate -g typescript-fetch -i api-docs/plantnet-open-api-spec.yml --output generated/plantnet",
    "gen-types-my-api": "npx @openapitools/openapi-generator-cli generate -g typescript-fetch -i api-docs/my-open-api-spec.yml --output generated/my-api",
    "gen-types": "npm run gen-types-perenual && npm run gen-types-plantnet && npm run gen-types-my-api"
  },
  "dependencies": {
    "@mdi/font": "^7.4.47",
    "@types/chroma-js": "^2.4.4",
    "chroma-js": "^2.4.2",
    "dayjs": "^1.11.13",
    "firebase": "^10.12.4",
    "gsap": "^3.12.5",
    "pinia": "^2.1.7",
    "uuid": "^9.0.1",
    "vite-plugin-vuetify": "^2.0.4",
    "vue": "^3.5.12",
    "vue-router": "^4.2.5",
    "vuetify": "^3.7.2"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.3.3",
    "@tsconfig/node20": "^20.1.2",
    "@types/node": "^20.11.10",
    "@types/uuid": "^9.0.8",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/tsconfig": "^0.5.1",
    "autoprefixer": "^10.4.18",
    "eslint": "^8.49.0",
    "eslint-plugin-vue": "^9.17.0",
    "npm-run-all2": "^6.1.1",
    "postcss": "^8.4.35",
    "prettier": "^3.0.3",
    "tailwindcss": "^3.4.1",
    "typescript": "~5.3.0",
    "vite": "^5.0.11",
    "vite-plugin-pwa": "^0.20.5",
    "vue-tsc": "^2.1.10"
  }
}
