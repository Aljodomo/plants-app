{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .js,.ts . --fix",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "update-firebase": "npx npm-check-updates firebase-admin firebase-functions -u && npm i",
    "gen-types": "npx @openapitools/openapi-generator-cli generate -g typescript-fetch -i api-docs/plantnet-open-api-spec.yml --output generated/plantnet"
  },
  "engines": {
    "node": "18"
  },
  "main": "lib/src/index.js",
  "dependencies": {
    "@types/uuid": "^10.0.0",
    "axios": "^1.7.7",
    "firebase-admin": "^12.7.0",
    "firebase-functions": "^6.1.0",
    "uuid": "^11.0.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "eslint": "^9.14.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.31.0",
    "firebase-functions-test": "^3.3.0",
    "typescript": "^5.6.3"
  },
  "private": true
}
